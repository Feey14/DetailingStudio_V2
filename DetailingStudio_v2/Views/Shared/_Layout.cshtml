@using DetailingStudio_v2.Enums;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DetailingStudio</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/multiselect.css" />
    <link rel="stylesheet" type="text/css" href="~/css/jquery.datetimepicker.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/js/jquery.datetimepicker.js"></script>
    <script src="~/js/multiselect.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow pt-3">
            <div class="container">
                <a class="navbar-brand text-white font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">DetailingStudio</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div style="margin-right:10px;" class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white mx-3" href="/Home/Index#About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white mx-3" asp-area="" asp-controller="Gallery" asp-action="Index">Gallery</a>
                        </li>
                        @if (User.IsInRole(nameof(UserRoleEnum.Administrator)))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white mx-3" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                            </li>
                        }
                        else if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white mx-3" asp-area="" asp-controller="Orders" asp-action="Create">My orders</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white mx-3" asp-area="" asp-controller="Orders" asp-action="Create">Make Appointment</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white mx-3" asp-area="" asp-controller="Affiliates" asp-action="Index">Contacts</a>
                        </li>
                    </ul>
                </div>
            </div>
            <a target="_blank" href="https://www.facebook.com">
                <img style="height:40px" class="border-radius-50" src="https://e7.pngegg.com/pngimages/973/323/png-clipart-facebook-logo-social-media-facebook-linkedin-estate-agent-computer-icons-background-black-logo-internet.png" alt="Facebook logo, Social media Facebook LinkedIn Estate agent Computer Icons, Background  black, logo, internet png | PNGEgg" />
            </a>
            <a target="_blank" href="https://www.instagram.com/detailingstudioqwerty/">
                <img style="height:40px; transform: rotateY(180deg);" class="border-radius-50" src="https://i.pinimg.com/originals/c6/2c/05/c62c055ede6aadbb1f94a555071c98b9.jpg" alt="Instagram Logo Vector Icons Free Download | SOIDERGI | Instagram logo, New instagram  logo, Vector icons free" />
            </a>
        <a href="tel:3712222222" class="btn font-weight-bold ml-4" style="color: black; background-color:white; height:40px; width:170px; margin-right:40px;  border-radius:20px; -moz-border-radius:20px; -webkit-border-radius:20px;">
            <table style="width:100%; height:100%;">
                <tbody>
                    <tr>
                        <td class="phone-number">+371 22222222</td>
                    </tr>
                </tbody>
            </table>
        </a>
</nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - DetailingStudio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
