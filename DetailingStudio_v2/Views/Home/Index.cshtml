<div class="container row text-center mb-5 mx-auto" style="height: 70px; border-bottom: solid 5px darkred; border-top: solid 5px darkred">
    @foreach (var affiliate in Model)
    {
        <p id="@affiliate.Id" class="col my-auto affiliate-title" onclick="reply_click(this.id)" country="@affiliate.Country" city="@affiliate.City" phonenumber="@affiliate.PhoneNumber" streetadress="@affiliate.StreetAdress" email="@affiliate.Email" iframelink="@affiliate.IframeMapUrl">@affiliate.City, @affiliate.StreetAdress</p>
    }
</div>
<div class="container h-400 mb-100">
    <div class="row h-100">
        <div class="col-7">
            <iframe id ="iframefield" class="w-100 h-100" 
                    src="@Model[0].IframeMapUrl" allowfullscreen"></iframe>
        </div>
        <div class="col-5">
            <p>
                Our Auto Detailing delights in serving Detailing in Riga and surrounding area’s.
            </p>
            <p>
                We Look Forward To Meeting All Your Cleaning & Detail Needs!!!
            </p>
            <h3>Contacts</h3>
            @if (@Model.Count > 0)
            {
                <p id="countryfield">@Model[0].Country</p>
                <p id="cityfield">@Model[0].City</p>
                <p id="streetadressfield">@Model[0].StreetAdress</p>
                <p id="phonenumberfield">@Model[0].PhoneNumber</p>
                <p id="emailfield">@Model[0].Email</p>
            }
            <a asp-controller="Orders" asp-action="Create" class="button-red-border btn d-inline-block w-100">Schedule An Appointment ></a>
        </div>
    </div>
</div>

<script>
    var slideIndex = 1;
    showSlides(slideIndex);

    // Next/previous controls
    function plusSlides(n) {
        showSlides(slideIndex += n);
    }

    // Thumbnail image controls
    function currentSlide(n) {
        showSlides(slideIndex = n);
    }

    function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("dot");
        if (n > slides.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = slides.length }
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";
    }

    function reply_click(clicked_id) {
        let element = document.getElementById(clicked_id);
        let country = element.getAttribute("country");
        let city = element.getAttribute("city");
        let phonenumber = element.getAttribute("phonenumber");
        let streetadress = element.getAttribute("streetadress");
        let email = element.getAttribute("email");
        let iframelink = element.getAttribute("iframelink");

        $("#countryfield").text(country);
        $("#cityfield").text(city);
        $("#phonenumberfield").text(phonenumber);
        $("#streetadressfield").text(streetadress);
        $("#emailfield").text(email);
        document.getElementById("iframefield").src = iframelink;
    }
</script>
