@model List<DetailingStudio_v2.Models.UserRole>

@{ 
    var roleId = ViewBag.roleId;
}

<div class="container">
    <form method="post">
        <div class="card">
            <div class="card-header text-dark">
                <h2>Add or remove users from this role</h2>
            </div>
            <div class="card-body text-dark">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <div class="form-check m-1">
                        <input asp-for="@Model[i].IsSelected" class="form-check-input text-dark" />
                        <label class="form-check-label text-dark" asp-for="@Model[i].IsSelected">
                            @Model[i].UserName
                        </label>
                    </div>
                    <div class="form-check m-1 d-none">
                        <input asp-for="@Model[i].UserName" class="form-check-input text-dark" />
                        <label class="form-check-label text-dark" asp-for="@Model[i].UserName">
                            @Model[i].UserName
                        </label>
                    </div>
                    <div class="form-check m-1 d-none">
                        <input asp-for="@Model[i].UserId" class="form-check-input text-dark" />
                        <label class="form-check-label text-dark" asp-for="@Model[i].UserId">
                            @Model[i].UserId
                        </label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
                <a asp-action="EditUsersRole" asp-route-id="@roleId" class="btn btn-primary" style="width:auto">Cancel</a>
            </div>
        </div>
    </form>
</div>