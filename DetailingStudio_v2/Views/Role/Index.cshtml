@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "All Roles";
}

<div class="container">
    <h1>All Roles</h1>

    @if (Model.Any())
    {
        <a class="btn btn-primary mb-2" asp-controller="Role" asp-action="Create" style="width:auto">
            Create role
        </a>
        foreach (var role in Model)
        {
            <div class="card mb-3">
                <div class="card-header text-dark">
                    Role Id : @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title text-dark">@role.Name</h5>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-controller="Role" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No roles created yet.
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a role
                </h5>
                <a class="btn btn-primary" asp-controller="Role" asp-action="Create" style="width:auto">
                    Create role
                </a>
            </div>
        </div>
    }
</div>